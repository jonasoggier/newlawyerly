<%= form_for [current_user, @post] do |f| %>

	<% if @post.errors.any? %>
	  <div id="error_explanation" class="alert alert-error">
	    <h3><%= pluralize(@post.errors.count, "error") %> prohibited this form from being saved:</h3>
	    <ul>
	      <% @post.errors.full_messages.each do |msg| %>
	        <li><%= msg %></li>
	      <% end %>
	    </ul>
	  </div>
	<% end %>

	<div class="span8 newpost">
		<label>Titel (darf nicht leer sein)</label>
	  <%= f.text_field :title, class: "input-block-level" %>
	  <label>Vorspann (falls gew√ºnscht, sonst leer lassen)</label>
	  <%= f.text_area :header %>
	  <label>Text des Beitrags (darf nicht leer sein)</label>
	  <%= f.text_area :body, id: "some-textarea" %>
	  <%= f.submit 'Beitrag publizieren', class: 'sign-in' %>
	</div>
<% end %>


